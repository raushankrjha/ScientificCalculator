<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rjha.www.scientific_calculator.Main2Activity"
    android:background="@android:color/darker_gray">



    <Button
        android:id="@+id/buttonequal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonpoint"
        android:layout_toRightOf="@+id/buttonpoint"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="="
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button0"
        android:layout_toRightOf="@+id/button0"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="00"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button00"
        android:layout_toRightOf="@+id/button00"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="."
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?android:attr/colorControlNormal"
        android:text="1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toEndOf="@+id/button0"
        android:layout_toRightOf="@+id/button0"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="2"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button00"
        android:layout_toRightOf="@+id/button00"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="3"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/buttonpoint"
        android:layout_toRightOf="@+id/buttonpoint"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="+"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="4"
        android:textColor="@android:color/white" />



    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="6"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="-"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="7"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_toLeftOf="@+id/buttonsqrt"
        android:layout_toStartOf="@+id/buttonsqrt"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="8"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:backgroundTint="?attr/colorControlNormal"
        android:text="9"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonmult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="*"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonopenbracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?android:attr/colorControlNormal"
        android:text="("
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/buttonclosebracket"
        android:layout_alignBottom="@+id/buttonclosebracket"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonclosebracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:backgroundTint="?attr/colorControlNormal"
        android:text=")"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonpercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonclosebracket"
        android:layout_alignBottom="@+id/buttonclosebracket"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="%"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttondiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonpowxy"
        android:layout_toEndOf="@+id/buttonpercent"
        android:layout_toRightOf="@+id/buttonpercent"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="/"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonclosebracket"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="ln"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/buttonlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="log"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignBaseline="@+id/buttonsqrt"
        android:layout_alignBottom="@+id/buttonsqrt"
        android:layout_toRightOf="@+id/buttonln"
        android:layout_toEndOf="@+id/buttonln" />

    <Button
        android:id="@+id/buttonsqrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonpowxy"
        android:layout_alignBottom="@+id/buttonpowxy"
        android:layout_toEndOf="@+id/buttonlog"
        android:layout_toRightOf="@+id/buttonlog"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="√"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonpowxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="xʸ"
        android:textColor="@android:color/white"
        android:layout_above="@+id/buttonpercent"
        android:layout_toRightOf="@+id/buttonpercent"
        android:layout_toEndOf="@+id/buttonpercent" />

    <Button
        android:id="@+id/buttonsquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonln"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="x²"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonsin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttoncos"
        android:layout_alignBottom="@+id/buttoncos"
        android:layout_toEndOf="@+id/buttonln"
        android:layout_toRightOf="@+id/buttonln"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="sin"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/buttoncos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttontan"
        android:layout_alignBottom="@+id/buttontan"
        android:layout_toEndOf="@+id/buttonlog"
        android:layout_toRightOf="@+id/buttonlog"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="cos"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/buttontan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonsqrt"
        android:layout_alignEnd="@+id/buttonpowxy"
        android:layout_alignRight="@+id/buttonpowxy"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="tan"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/buttone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonsquare"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="ҽ "
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonpie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button10x"
        android:layout_toEndOf="@+id/buttonsquare"
        android:layout_toRightOf="@+id/buttonsquare"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Π"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttoncancel"
        android:layout_alignBottom="@+id/buttoncancel"
        android:layout_toEndOf="@+id/buttonpie"
        android:layout_toRightOf="@+id/buttonpie"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="E"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttoncancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttoncos"
        android:layout_toEndOf="@+id/buttonE"
        android:layout_toRightOf="@+id/buttonE"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="X"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonstd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonpie"
        android:layout_toStartOf="@+id/buttonpie"
        android:backgroundTint="?attr/colorPrimary"
        android:text="STANDARD"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button10x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttone"
        android:layout_toEndOf="@+id/buttonstd"
        android:layout_toRightOf="@+id/buttonstd"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="10 ̽"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_toEndOf="@+id/buttonpie"
        android:layout_toRightOf="@+id/buttonpie"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="ҽ ̽"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonex"
        android:layout_alignBottom="@+id/buttonex"
        android:layout_toEndOf="@+id/buttonE"
        android:layout_toRightOf="@+id/buttonE"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="AC"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:backgroundTint="?android:attr/colorControlNormal"
        android:text="5"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter Number"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Answer"
        android:inputType="textPersonName"
        android:layout_above="@+id/buttonstd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonac"
        android:layout_alignEnd="@+id/buttonac" />














</RelativeLayout>
